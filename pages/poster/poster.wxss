.postercontainer{
  margin: 20rpx;
  border-radius: 40rpx;
  height: 88vh;
  width: 710rpx;
  position: relative;
  box-shadow: 2rpx 2rpx 4rpx 4rpx #F2F1FC;
}

.Canvas{
  position: absolute;
  width: 710rpx;
  height: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.form{
  width: 1000rpx;
  height: 100%;
}
 
