<view class="user-block">
  <swiper class="swiper" bindchange="swiperChange" previous-margin="25rpx" next-margin="25rpx" current="{{cur}}">
    <swiper-item>
        <swiper class="show" autoplay="{{true}}">
          <swiper-item wx:for="{{show_img}}" class="">
            <view class="show item"><image class="img" src="{{item.url}}" mode="aspectFit|aspectFill|widthFix"></image></view>
          </swiper-item> 
        </swiper>
        <view class="item1" hover-class="none" hover-stop-propagation="false">
          <view class="userinfo-container">
            <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
          </view>
          <view class="bouns-container" hover-class="none" hover-stop-propagation="false">
            <text class="bouns">
              {{bouns}}
            </text>
            <text class="bouns-text" selectable="false" space="false" decode="false">
              成功获得奖励课时
            </text>
          </view>
          <view class="invitedInfo" >
            <view wx:for="{{inv_list}}" wx:key="index" wx:if="{{index < 3}}" class="inv_item" hover-class="none" hover-stop-propagation="false">
              <text class="inv_text">{{item.num}}</text><text class="inv_text">{{item.inv_text}}</text>
            </view>
            <view class="inv_item_last"><text class="inv_text">{{inv_list[3].num}}</text><text class="inv_text">{{inv_list[3].inv_text}}</text></view>
          </view>
          <view class="btnarea" hover-class="none" hover-stop-propagation="false">
              <button class="redbtn1" bind:tap="changetoposter">邀请好友</button>
              <button class="redbtn1" bind:tap="currentChange">查看好友进度</button>
          </view>
        </view>
    </swiper-item>
    <swiper-item class="">
      <scroll-view class="item2" scroll-y="{{true}}" scroll-with-animation="{{true}}" hover-class="none" hover-stop-propagation="false">
        <view class="step-title" hover-class="none" hover-stop-propagation="false">
          <text class="step-text">好友进度详情</text>
        </view>
        <view class="">
          <view wx:for="{{transferInfo.recommandlist}}" class="steps">
            <view class="invitedname">{{transferInfo.recommandlist[index].name}}</view>
              <van-steps
              steps="{{ steps }}"
              active="{{ transferInfo.recommandlist[index].active }}"
              custom-class="demo-margin-bottom"
              active-color='#EE5557'
              />
          </view>       
        </view>
        <view class="btnarea2" hover-class="none" hover-stop-propagation="false">
          <button class="redbtn3" bind:tap="changetoposter">邀请好友</button>  
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
  <view class="dots">
    <block wx:for="{{slider}}" wx:key="unique">
      <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
    </block>
  </view>
</view>
