.Input-area{
  position: absolute;
  bottom: 30%;
  height: 55rpx;
  width: 50%;
  left: 25%;
  z-index: 2;
  border: 2rpx solid #000;
}

.btnarea{
  position: absolute;
  flex-direction: row;
  width: 750rpx;
  height: 10%;
  bottom: 20rpx;
  display: flex;
  align-items: center;
}

.redbtn1{
  width: 40%;
  height: 60rpx;
  display: inline-block;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #fff;
  
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #EE5557;
  border-radius: 20rpx;
}

.redbtn1.left{
  margin-left: 30rpx;
}

.redbtn1.right{
  margin-right: 30rpx;
}

.redbtn1::after{
  border: none;
}

.saveImg{
  position: absolute;
  width: 40%;
  height: 8%;
  bottom: 5px;
  right: 0px;
  z-index:9999;
}

.btn{
  border-radius: 40rpx;
  width: 40%;
  height: 60%;
  background-color: #ee5557;
}